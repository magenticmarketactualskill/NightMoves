<div class="space-y-6">
  <div class="md:flex md:items-center md:justify-between">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
        Developer Dashboard
      </h2>
      <p class="mt-1 text-sm text-gray-500">Welcome back, <%= current_user.first_name %>!</p>
    </div>
    <div class="mt-4 flex md:ml-4 md:mt-0">
      <%= link_to new_developers_component_path, class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" do %>
        <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
        </svg>
        New Component
      <% end %>
    </div>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
    <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-gray-500">Total Components</dt>
      <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= @components.size %></dd>
    </div>
    <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-gray-500">Total Downloads</dt>
      <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900"><%= number_with_delimiter(@total_downloads) %></dd>
    </div>
    <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-gray-500">Total Earnings</dt>
      <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900">$<%= number_with_delimiter(@total_earnings / 100.0, precision: 2) %></dd>
    </div>
    <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-gray-500">Pending Payout</dt>
      <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900">$<%= number_with_delimiter(@pending_earnings / 100.0, precision: 2) %></dd>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
    <!-- Recent Components -->
    <div class="overflow-hidden rounded-lg bg-white shadow">
      <div class="p-6">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Your Components</h3>
        <div class="mt-6 flow-root">
          <% if @components.any? %>
            <ul role="list" class="-my-5 divide-y divide-gray-200">
              <% @components.each do |component| %>
                <li class="py-4">
                  <div class="flex items-center space-x-4">
                    <div class="min-w-0 flex-1">
                      <%= link_to developers_component_path(component), class: "text-sm font-medium text-gray-900 hover:text-indigo-600" do %>
                        <%= component.name %>
                      <% end %>
                      <p class="truncate text-sm text-gray-500"><%= component.tagline %></p>
                    </div>
                    <div>
                      <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium <%= component.published? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                        <%= component.status.humanize %>
                      </span>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-sm text-gray-500">No components yet. Create your first one!</p>
          <% end %>
        </div>
        <div class="mt-6">
          <%= link_to "View all", developers_components_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
        </div>
      </div>
    </div>

    <!-- Recent Reviews -->
    <div class="overflow-hidden rounded-lg bg-white shadow">
      <div class="p-6">
        <h3 class="text-base font-semibold leading-6 text-gray-900">Recent Reviews</h3>
        <div class="mt-6 flow-root">
          <% if @recent_reviews.any? %>
            <ul role="list" class="-my-5 divide-y divide-gray-200">
              <% @recent_reviews.each do |review| %>
                <li class="py-4">
                  <div class="flex items-start space-x-4">
                    <div class="min-w-0 flex-1">
                      <p class="text-sm font-medium text-gray-900"><%= review.component.name %></p>
                      <p class="text-sm text-gray-500">
                        <span class="text-yellow-500">
                          <% review.rating.times do %>★<% end %><% (5 - review.rating).times do %>☆<% end %>
                        </span>
                        by <%= review.user.display_name %>
                      </p>
                      <% if review.body.present? %>
                        <p class="mt-1 text-sm text-gray-600 line-clamp-2"><%= review.body %></p>
                      <% end %>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-sm text-gray-500">No reviews yet.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
