      <div class="border-t border-gray-200 pb-3 pt-4">
        <div class="flex items-center px-4">
          <div class="flex-shrink-0">
            <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-indigo-600">
              <span class="text-sm font-medium leading-none text-white"><%= current_user.first_name&.first&.upcase || current_user.email.first.upcase %></span>
            </span>
          </div>
          <div class="ml-3">
            <div class="text-base font-medium text-gray-800"><%= current_user.display_name %></div>
            <div class="text-sm font-medium text-gray-500"><%= current_user.email %></div>
          </div>
        </div>
        <div class="mt-3 space-y-1">
          <%= link_to "Your Profile", edit_user_registration_path, class: "block px-4 py-2 text-base font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-800" %>
          <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "block w-full text-left px-4 py-2 text-base font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-800" %>
        </div>
