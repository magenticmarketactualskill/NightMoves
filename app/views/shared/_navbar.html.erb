          <% if current_user.developer? %>
            <%= link_to "My Components", developers_components_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700 mr-4" %>
          <% elsif current_user.enterprise? %>
            <%= link_to "My Organization", enterprises_organization_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700 mr-4" %>
          <% elsif current_user.admin? %>
            <%= link_to "Admin", admin_root_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700 mr-4" %>
