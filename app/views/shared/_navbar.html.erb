            <button type="button" class="flex rounded-full bg-white text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" data-action="click->dropdown#toggle">
              <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-indigo-600">
                <span class="text-sm font-medium leading-none text-white"><%= current_user.first_name&.first&.upcase || current_user.email.first.upcase %></span>
              </span>
