    <% else %>
      <div class="border-t border-gray-200 pb-3 pt-4 space-y-1">
        <%= link_to "Sign in", new_user_session_path, class: "block px-4 py-2 text-base font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-800" %>
        <%= link_to "Get Started", new_user_registration_path, class: "block px-4 py-2 text-base font-medium text-indigo-600 hover:bg-gray-100" %>
      </div>
    <% end %>
  </div>
